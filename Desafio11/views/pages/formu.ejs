<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <title>Formulario</title>
        <link rel="stylesheet" href="./css/main.css">
        <script src="/socket.io/socket.io.js"></script>
</head>

<body>
    <div class="d-flex align-items-center flex-column ">
        <form class="shadow p-3 mb-5 bg-body rounded" id="formulario">
            <h2>Ingrese Producto</h2>
            <div>
                <label for="nombre" class="form-label">Nombre del producto:</label>
                <input type="text" name="title" id="nombre" class="form-control">
            </div>
            <div>
                <label for="precio" class="form-label">Precio:</label>
                <input type="number" name="price" id="precio" class="form-control">
            </div>
            <div>
                <label for="img" class="form-label">Url de imagen:</label>
                <input type="text" name="thumbnail" id="img" class="form-control">
            </div>
            <button type="button" class="btn btn-primary my-2" id="enviar">Enviar</button>
        </form>
    </div>

    <div id="products">
        <div class="d-flex align-items-center flex-column" id="tabla">
            <table class="table table-dark">
                <tr>
                    <th>nombre</th>
                    <th>precio</th>
                    <th>img</th>
                </tr>
                <tbody id="tablaProducts">
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex align-items-center flex-column ">
        <form class="shadow p-3 mb-5 bg-body rounded">
            <h2>Centro de Mensajes</h2>
            <h3 id="compresion"></h3>
            <div>
                <label for="mail" class="form-label">Mail</label>
                <input type="text" name="mail" id="mail" class="form-control">
            </div>
            <div>
                <label for="name" class="form-label">Nombre</label>
                <input type="text" name="name" id="name" class="form-control">
            </div>
            <div>
                <label for="apellido" class="form-label">Apellido</label>
                <input type="text" name="apellido" id="apellido" class="form-control">
            </div>
            <div>
                <label for="edad" class="form-label">Edad</label>
                <input type="text" name="edad" id="edad" class="form-control">
            </div>
            <div>
                <label for="alias" class="form-label">Alias</label>
                <input type="text" name="alias" id="alias" class="form-control">
            </div>
            <div>
                <label for="avatarUrl" class="form-label">Avatar</label>
                <input type="text" name="avatar" id="avatarUrl" class="form-control">
            </div>
            <div>
                <label for="msg" class="form-label">Mensaje</label>
                <input type="text" name="mensaje" id="msg" class="form-control">
            </div>

            <button type="button" class="btn btn-primary my-2" id="enviarMsg">Enviar</button>
        </form>
    </div>

    <div class="container-xxl ">
        <div id="chatText"></div>
    </div>
    <%- include('../partials/scriptBS') %>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
        <script src="./js/cliente.js" type="module"></script>
</body>

</html>